<div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-9 px-5 px-sm-0 mx-auto">
        <h4 class="mt-3">新規会員登録</h4>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "customers/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label "名前" %>
            (姓)<%=f.text_field :last_name, autofocus: true, autocomplete: "last_name" %> (名)<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
          </div>

          <div class="field">
            <%= f.label "フリガナ" %>
            (セイ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %> (メイ)<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
          </div>

          <div class="field">
            <%= f.label "メールアドレス" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label "郵便番号(ハイフンなし)" %>
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "pastal_code" %>
          </div>

          <div class="field">
            <%= f.label "住所" %>
            <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
          </div>

          <div class="field">
            <%= f.label "電話番号(ハイフンなし)" %>
            <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
          </div>

          <div class="field">
            <%= f.label "パスワード(6文字以上)" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label "パスワード(確認用)" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions">
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-9 px-5 px-sm-0 mx-auto">
        <h4 class="mt-3">既に登録済みの方</h4>
        <%= link_to "こちら", new_customer_session_path %>
        からログインしてください。
      </div>
    </div>
  </div>