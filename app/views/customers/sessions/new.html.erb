<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h5 class="mt-3">ログイン</h5>
        <h5 class="mt-3">会員の方はこちらからログイン</h5>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <table>
            <tr>
              <td class="pr-5" style="height: 30px;">メールアドレス</td>
              <td>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </td>
            </tr>
    
            <tr>
              <td class="pr-5" style="height: 30px;">パスワード</td>
              <td>
                <%= f.password_field :password, autocomplete: "current-password" %>
              </td>
            </tr>
    
            <tr>
              <td class="pr-5" style="height: 30px;"></td>
              <td>
                <%= f.submit "ログイン", class: "btn btn-primary" %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h5 class="mt-3">会員登録がお済みでない方</h5>
        <%= link_to "こちら", new_customer_registration_path %>
        から新規登録を行ってください。
      </div>
    </div>
  </main>



