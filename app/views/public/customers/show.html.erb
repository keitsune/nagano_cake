<main>
  <div class="container">
    <h4>
      <strong>マイページ</strong>
    </h4
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <div>
          <strong>登録情報</strong>
          <%= link_to edit_customers_path(current_customer) do %>
          <div class="btn btn-sm btn-success">編集する</div>
          <% end %>
        </div>
        <table class="table">
          <tbody>
            <tr>
              <th>氏名</th>
              <td>
                <%= @customer.last_name %>
                <%= @customer.first_name %>
              </td>
            </tr>
            <tr>
              <th>カナ</th>
              <td>
                <%= @customer.last_name_kana %>
                <%= @customer.first_name_kana %>
              </td>
            </tr>
            <tr>
              <th>郵便番号</th>
              <td>
                <%= @customer.postal_code %>
              </td>
            </tr>
            <tr>
              <th>住所</th>
              <td>
                <%= @customer.address %>
              </td>
            </tr>
            <tr>
              <th>電話番号</th>
              <td>
                <%= @customer.telephone_number %>
              </td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td>
                <%= @customer.email %>
              </td>
            </tr>
          </tbody>
        </table>
        <div>
          <strong>配送先</strong>
          <%= link_to addresses_path do %>
            <button class="btn btn-primary">一覧を見る</button>
          <% end %>
        </div>
        <div>
          <strong>注文履歴</strong>
          <%= link_to orders_path(@customer) do %>
            <button class="btn btn-primary">一覧を見る</button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>
