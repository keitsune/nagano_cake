  <main>
    <div class="container">
        <div class="row">
          <div class="col-sm-12 col-md-8 col-lg-9 px-5 px-sm-0 mx-auto">
            <h4 class="mt-3">会員情報編集</h4>
            <%= form_with model: @customer, url: customers_path, local: true do |f| %>

              <div class="field">
                <%= f.label "名前" %>
                (姓)<%=f.text_field :last_name, autofocus: true, autocomplete: "last_name" %> (名)<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
              </div>

              <div class="field">
                <%= f.label "フリガナ" %>
                (セイ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %> (メイ)<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
              </div>

              <div class="field">
                <%= f.label "メールアドレス" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>

              <div class="field">
                <%= f.label "郵便番号(ハイフンなし)" %>
                <%= f.text_field :postal_code, autofocus: true, autocomplete: "pastal_code" %>
              </div>

              <div class="field">
                <%= f.label "住所" %>
                <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
              </div>

              <div class="field">
                <%= f.label "電話番号(ハイフンなし)" %>
                <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
              </div>

              <div class="actions">
                <%= f.submit "新規登録", class: "btn btn-success" %>
                <%= link_to customers_unsubscribe_path do %>
                  <%= f.submit "退会", class: "btn btn-danger" %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </main>