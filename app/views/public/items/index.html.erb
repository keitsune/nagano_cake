
  <div class="container">
    <div class="row">
      <div class="items">
        <h4 class="mt-3">
          商品一覧(全
          <%= Item.count %>
          件)
        </h4>
        <div class="item-wrap">
          <% @items.each do |item| %>
            <div class="item-box">
              <%= attachment_image_tag item, :image, format: 'jpeg', size: "200x200", fallback: "no_image.jpg" %>
              <div class="item-name">
                <%= link_to item_path(item) do %>
                  <%= item.name %>
                <% end %>
              </div>
              <div class="item-price">
                ￥<%= item.price %>
              </div>
            </div>
          <% end %>
        </div>
        <%= paginate @items %>
      </div>
    </div>
  </div>