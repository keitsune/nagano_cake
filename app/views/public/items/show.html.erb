<main>
  <div class="container">
    <h4 class="mt-3">商品詳細</h4>
    <div class="row">
        <div class="col-md-4">
          <%= attachment_image_tag @item, :image, format: 'jpeg', size: "250x250", fallback: "no_image.jpg" %>
        </div>
        <div class="col-md-8">
          <div>
            <h3>
              <%= @item.name %>
            </h3>
          </div>
          <div>
            <h5>
              <%= @item.introduction %>
            </h5>
          </div>
          <div>
            <h4>
              ￥<%= (@item.price * 1.1).to_i %>(税込)
            </h4>
          </div>

        　<div class="center-block">
            <%= form_with model: @cart_item, url: cart_items_path, local: true do |f| %>
              <%= f.select :amount, *[1..10] %>
              <%= f.hidden_field :item_id, :value => @item.id %>
              <%= f.submit "カートに入れる", class: "btn-success" %>
            <% end %>
        　</div>
        </div>
    </div>
  </div>
</main>
