<main>
  <div class="container">
    <div class="row">
      <div class="col d-flex justify-content-between">
        <div class="col-6">
          <table class="table table-bordered">
            <thead>
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
            </thead>
            <tbody>
              <% @cart_items.each do |cart_item| %>
              <tr>
                <td>
                  <%= attachment_image_tag cart_item.item, :image, format: 'jpeg', size: "40x40", fallback: "no_image.jpg" %>
                  <%= cart_item.item.name %>
                </td>
                <td><%= (cart_item.item.price * 1.1).to_i %></td>
                <td>
                  <%= cart_item.amount %>
                </td>
                <td><%= (cart_item.item.price * 1.1 * cart_item.amount).to_i %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="col-4">
          <table class="table table-bordered">
            <tr>
              <td>送料</td>
              <td><%= @order.shipping_cost %></td>
            </tr>
            <tr>
              <td>合計金額</td>
              <td><%= @sum %></td>
            </tr>
            <tr>
              <td>請求金額</td>
              <td><%= @order.total_payment %></td>
            </tr>
          </table>
        </div>
      </div>
      <div class="container">
        <div class="row">
          <h4>支払方法</h4>
            <% if @order.payment_method == 'credit_card' %>
            クレジットカード
            <% elsif @order.payment_method == 'transfer' %>
            銀行振込
            <% end %>
          <div>
        </div>
      </div>
      <div class="container">
        <div class="row">
          <h4>お届け先</h4>
          〒<%= @order.postal_code %>
          <%= @order.address %>
          </br>
          <%= @order.name %>
        </div>
      </div>
      <div class="container">
        <div class="row">
          <div class="col d-flex justify-content-center">
            <div>
              <%= form_with model: @order, url: orders_path, local: true do |f| %>
                <%= f.hidden_field :customer_id %>
                <%= f.hidden_field :payment_method %>
                <%= f.hidden_field :postal_code %>
                <%= f.hidden_field :address %>
                <%= f.hidden_field :name %>
                <%= f.hidden_field :shipping_cost %>
                <%= f.hidden_field :total_payment %>
                <%= f.hidden_field :status %>
                <%= f.submit "注文を確定する" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
