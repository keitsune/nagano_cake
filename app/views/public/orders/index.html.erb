<main>
  <div class="container">
    <div class="row">
      <h4>注文履歴一覧</h4>
      <div class="col-12">
        <table class="table table-bordered">
          <thead>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
            <tr>
              <td>
                <%= order.created_at %>
              </td>
              <td>
                <%= order.postal_code %></br>
                <%= order.address %></br>
                <%= order.name %>
              </td>
              <td>

              </td>
              <td>
                <%= order.total_payment %>
              </td>
              <td>
                <% if @order.status == 'waiting_for_deposit' %>
                  入金待ち
                <% elsif @order.status == 'payment_confirmation' %>
                  入金確認
                <% elsif @order.status == 'under_production' %>
                  制作中
                <% elsif @order.status == 'preparing_to_ship' %>
                  発送準備中
                <% elsif @order.status == 'sent' %>
                  発送済み
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>