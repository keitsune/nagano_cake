<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-9 px-5 px-sm-0 mx-auto">
        <h4 class="mt-3">配送先登録/一覧</h4>
        <%= form_with model: [:public, @address], url: addresses_path, local: true do |f| %>
        <div class="field">
          <%= f.label "郵便番号(ハイフンなし)" %>
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </div>
        <div class="field">
          <%= f.label "住所" %>
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>
        <div class="feild">
          <%= f.label "宛名" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          <%= f.submit "新規登録", class:"btn btn-success" %>
        </div>
        <% end %>
        <table class="table table-bordered">
          <thead>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>

          </thead>
          <tbody>
            <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to edit_address_path(address) do %>
                <button class="btn btn-success">編集する</button>
                <% end %>
                <%= link_to address_path(address), method: :delete do %>
                <button class="btn btn-danger">削除する</button>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>