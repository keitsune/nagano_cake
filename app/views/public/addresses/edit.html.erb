<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-9 px-5 px-sm-0 mx-auto">
        <h4 class="mt-3">配送先編集</h4>
        <%= form_with model: @address, local: true do |f| %>
        <div class="field">
          <%= f.label "郵便番号(ハイフンなし)" %>
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </div>
        <div class="field">
          <%= f.label "住所" %>
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>
        <div class="feild">
          <%= f.label "宛名" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          <%= f.submit "変更内容を保存", class:"btn btn-success" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
