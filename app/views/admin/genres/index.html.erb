<h3>ジャンル一覧・追加</h3>

<%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
  <p>
    <strong>ジャンル名</strong>
    <%= f.text_field :name %>
  <%= f.submit "新規登録", class:"btn btn-sm btn-success" %>
  </p>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>name</th>
      <th></th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "新規登録", edit_genre_path, class:"btn btn-sm btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>