<main>
  <div class="container">
    <h3>ジャンル一覧・追加</h3>
    <div class="row">
      <%= form_with model: @genre_new, url: admin_genres_path, local:true do |f| %>
      <table>
        <tr>
          <td class="pr-5" style="height: 30px;">ジャンル名</td>
          <td class="pr-5" style="height: 30px;">
            <%= f.text_field :name %>
          </td>
          <td>
            <%= f.submit "新規登録", class:"btn btn-sm btn-success" %>
          </td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-4">
        <table class="table">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th></th>
              <th colspan="2"></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <th>
                  <%= link_to edit_admin_genre_path(genre) do %>
                  <div class="btn btn-sm btn-success">編集する</div>
                  <% end %>
                </th>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>