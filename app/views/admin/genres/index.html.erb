<h3>ジャンル一覧・追加</h3>

<%= form_with model: @genre_new, url: admin_genres_path, local:true do |f| %>
  <label for="inputName">ジャンル名</label>
    <%= f.text_field :name %>
  <%= f.submit "新規登録", class:"btn btn-sm btn-success" %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <th>
          <%= link_to edit_admin_genre_path(genre) do %>
          <div class="btn btn-sm btn-success">編集する</div>
          <% end %>
        </th>
      </tr>
    <% end %>
  </tbody>
</table>