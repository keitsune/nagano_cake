<main>
  <div class="container">
    <h4>
      <strong><%= @customer.last_name + @customer.first_name %></strong>
      さんの
      <strong>会員情報編集</strong>
    </h4>
    <div class="row">
      <%= form_with model: [:admin,@customer], local: true do |f| %>
        <table>
          <tbody>
            
            <tr>
              <td class="pr-5" style="height: 30px;">会員ID</td>
              <td>
                <%= @customer.id %>
              </td>
            </tr>
          
            <tr>
              <td class="pr-5" style="height: 30px;">名前</td>
              <td class="pr-5" style="height: 30px;">
                <%=f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
              </td>
              <td>
                <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
              </td>
            </tr>
    
            <tr>
              <td class="pr-5" style="height: 30px;">フリガナ</td>
              <td class="pr-5" style="height: 30px;">
                <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
              </td>
              <td>
                <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
              </td>
            </tr>
    
            <tr>
              <td class="pr-5" style="height: 30px;">メールアドレス</td>
              <td>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </td>
            </tr>
    
            <tr>
              <td class="pr-5" style="height: 30px;">郵便番号(ハイフンなし)</td>
              <td>
                <%= f.text_field :postal_code, autofocus: true, autocomplete: "pastal_code" %>
              </td>
            </tr>
    
            <tr>
              <td class="pr-5" style="height: 30px;">住所</td>
              <td>
                <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
              </td>
            </tr>
    
            <tr>
              <td class="pr-5" style="height: 30px;">電話番号(ハイフンなし)</td>
              <td>
                <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
              </td>
            </tr>
            
            <tr>
              <td class="pr-5" style="height: 30px;">会員ステータス</td>
              <td>
                <%= f.radio_button :is_deleted, 'false' %>
                <%= f.label :is_deleted, '有効', value: false %>
                <%= f.radio_button :is_deleted, 'ture' %>
                <%= f.label :is_deleted, '退会', value: true %>
              </td>
            </tr>
            
            <tr>
              <td class="pr-5" style="height: 30px;"></td>
              <td>
                <%= f.submit "変更を保存", class: "btn btn-success" %>
              </td>
            </tr>
          
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</main>
