<main>
  <div class="container">
    <strong>会員一覧</strong>
    <div class="row">
      <div class="col-8">
        <table class="table">
          <thead>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to admin_customer_path(customer) do %>
                  <%= customer.last_name + customer.first_name %>
                <% end %>
              </td>
              <td><%= customer.address %></td>
              <% if customer.is_deleted %>
                <td>退会</td>
              <% else %>
                <td>有効</td>
              <% end %>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @customers %>
      </div>
    </div>
  </div>
</main>