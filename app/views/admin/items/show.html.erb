<main>
  <div class="container">
    <h4 class="mt-3">商品詳細</h4>
    <div class="row">
      <!--<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">-->
        <div class="col-md-4">
          <%= attachment_image_tag @item, :image, format: 'jpeg', size: "250x250", fallback: "no_image.jpg" %>
        </div>
        <div class="col-md-8">
          <div>
            <label for="inputName">商品名</label>
            <%= @item.name %>
          </div>
          <div>
            <label for="inputName">商品説明</label>
            <%= @item.introduction %>
          </div>
          <div>
            <label for="inputName">ジャンル</label>
            <%= @item.genre.name %>
          </div>
          <div>
            <label for="inputName">税込価格</br>(税抜価格)</label>
            <%= @item.price %>
            (<%= @item.price * 1.1 %>)円
          </div>
          <div>
            <label for="inputName">販売ステータス</label>
            <% if @item.is_active %>
              <td>販売中</td>
            <% else %>
              <td>販売停止中</td>
            <% end %>
          </div>
            <div class="center-block">
              <%= link_to edit_admin_item_path(@item) do %>
                <div class="btn btn-sm btn-success">編集する</div>
              <% end %>
            </div>

        </div>
      <!--</div>-->
    </div>
  </div>
</main>