<main>
  <div class="container">
    <div class="row">
      <div class="col-8 d-flex justify-content-between">
        <div>
          <strong>商品一覧</strong>
        </div>
        <div>
          <%= link_to new_admin_item_path do %>
            ＋
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-8">
        <table class="table">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
              <th colspan="5"></th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
              <tr>
                <td><%= item.id %></td>
                <td>
                  <%= link_to admin_item_path(item) do %>
                    <%= item.name%>
                  <% end %>
                </td>
                <td><%= item.price %></td>
                <td><%= item.genre.name %></td>
                <% if item.is_active %>
                  <td>販売中</td>
                <% else %>
                  <td>販売停止中</td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @items %>
      </div>
    </div>
  </div>
</main>
